<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="gemfindringbuilder" translate="label" type="text" sortOrder="999" showInDefault="1" showInWebsite="1" showInStore="1">
            <tab>gemfind</tab>
            <resource>Gemfind_Ringbuilder::config_ringbuilder</resource>
            <group id="general" translate="label" type="text" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                <field id="rapnet_username" translate="label" type="text" sortOrder="101" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Rapnet API Username</label>
                    <validate>required-entry</validate>
                </field>
                <field id="rapnet_password" translate="label" type="obscure" sortOrder="102" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Rapnet API Password</label>
                    <validate>required-entry</validate>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
            </group>
        </section>
    </system>
</config>
