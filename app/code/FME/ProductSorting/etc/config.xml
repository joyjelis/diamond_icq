<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <productSorting>
            <general>
                <enabled>1</enabled>
                <stock_status>0</stock_status>
                <stock_qty>0</stock_qty>
                <sort_order>Best Seller,Top Rated,Product Name,Biggest Saving,Price,Price: high to low,Most Viewed,Reviews Count,Now in Wishlists,Position,Price: low to high,Stock Quantity,New Arrival</sort_order>
            </general>
            <sorting_default>
                <!-- <search_sort>1</search_sort>
                <category_sort>0</category_sort> -->
            </sorting_default>
            <created_at>
                <enable>1</enable>
                <label>New Arrivals</label>
                <applyPage>1,2</applyPage>
                <direction>2</direction>
            </created_at>
            <best_seller>
                <enable>1</enable>
                <label>Best Seller</label>
                <applyPage>1,2</applyPage>
                <direction>2</direction>
                <orderStatus></orderStatus>
            </best_seller>
            <most_viewed>
                <enable>1</enable>
                <label>Most Viewed</label>
                <applyPage>1,2</applyPage>
                <direction>2</direction>
                <days></days>
            </most_viewed>
            <relevance>
                <enable>1</enable>
                <label>Relevance</label>
                <direction></direction>
            </relevance>
            <review_count>
                <enable>1</enable>
                <label>Reviews Count</label>
                <applyPage>1,2</applyPage>
                <direction>2</direction>
            </review_count>
            <stockquantity>
                <enable>1</enable>
                <label>Stock Quantity</label>
                <applyPage>1,2</applyPage>
                <direction>2</direction>
            </stockquantity>
            <wished>
                <enable>1</enable>
                <label>Now in Wishlist</label>
                <applyPage>1,2</applyPage>
                <direction>2</direction>
            </wished>
            <name>
                <enable>1</enable>
                <label>Product Name</label>
                <applyPage>1,2</applyPage>
                <direction>1</direction>
            </name>
            <price_asc>
                <enable>1</enable>
                <label>Price:Low to High</label>
                <applyPage>1,2</applyPage>
            </price_asc>
            <price_desc>
                <enable>1</enable>
                <label>Price:High to Low</label>
                <applyPage>1,2</applyPage>
            </price_desc>
            <top_rated>
                <enable>1</enable>
                <label>Top rated</label>
                <applyPage>1,2</applyPage>
                <direction>2</direction>
            </top_rated>
            <saving>
                <enable>1</enable>
                <label>Saving</label>
                <applyPage>1,2</applyPage>
                <direction>2</direction>
            </saving>
            <price>
                <enable>1</enable>
                <label>Price</label>
                <direction>1</direction>
                <applyPage>1,2</applyPage>
            </price>
            <position>
                <enable>1</enable>
                <label>Position</label>
                <direction>1</direction>
                <applyPage>1,2</applyPage>
            </position>
              <widget>
                <enable>1</enable>
                <option>top_rated</option>
                <applyPage>2,3</applyPage>
            </widget>

        </productSorting>
    </default>
</config>
