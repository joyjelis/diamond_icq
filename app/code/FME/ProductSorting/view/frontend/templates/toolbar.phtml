$blockObj= $block->getLayout()->createBlock('FME\ProductSorting\Block\Product\ProductList\Toolbar');
$currentOrder = $blockObj->checkCurrentOrder();
$helpers = $this->helper('FME\ProductSorting\Helper\Data');
$sortBy = $helpers->getConfig('sorting_default/category_sort');
$sortVal = $sortBy."/direction";
$sortDirection = $helpers->getConfig($sortVal);


?>
<script type="text/javascript">
    require(['jquery'], function($) {
        var currentOrder = '<?php echo $currentOrder; ?>';
        var currentDirection = '<?php echo $sortDirection; ?>';
        $(document).ready(function() {

            if( currentOrder == 'price_asc' ) {
                $('.sort-desc').hide();
                $('.sort-asc').hide();
            }
            if( currentOrder == 'price_desc' ) {
                $('.sort-desc').hide();
                $('.sort-asc').hide();
            }
        });
    });
</script>
