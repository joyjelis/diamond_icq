<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="stripe-payments-customer-cards">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">My Saved Cards</argument>
                    <argument name="path" xsi:type="string">stripe/customer/cards</argument>
                    <argument name="sortOrder" xsi:type="number">10</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="stripe-payments-subscriptions" remove="true"/>
    </body>
</page>
