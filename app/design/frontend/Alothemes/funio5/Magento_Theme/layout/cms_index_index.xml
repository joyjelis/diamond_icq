<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <container name="canonical.home.page.container">
                <block class="Magento\Framework\View\Element\Text" name="canonical.home.page">
                    <arguments>
                        <argument name="label" xsi:type="string">Adding canonical tag with base URL</argument>
                        <argument name="text" xsi:type="helper" helper="Travash\Customization\Helper\Canonical::getCanonicalTag"/>
                    </arguments>
                </block>
            </container>
        </referenceBlock>
        <referenceContainer name="main.content" htmlTag="main" htmlClass="page-main page-main-pal" />
    </body>	
</page>
